{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "basics": [
       
            {
                "name": "virtualNetworkAddressPrefixes",
                "type": "Microsoft.Common.TextBox",
                "label": "Virtual Network Address Prefixes",
                "toolTip": "Specifies the address prefixes of the virtual network.",
                "defaultValue": "10.0.0.0/8",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "applicationGatewaySubnetAddressPrefix",
                "type": "Microsoft.Common.TextBox",
                "label": "Application Gateway Subnet Address Prefix",
                "toolTip": "Specifies the address prefix of the subnet which contains the Application Gateway.",
                "defaultValue": "10.0.0.0/8",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "virtualMachineSubnetAddressPrefix",
                "type": "Microsoft.Common.TextBox",
                "label": "Virtual Machine SubnetAddress Prefix",
                "toolTip": "Specifies the address prefix of the subnet which contains the virtual machine.",
                "defaultValue": "10.0.0.0/8",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "netAppFileSubnetAddressPrefix",
                "type": "Microsoft.Common.TextBox",
                "label": "NetAppFile Subnet Address Prefix",
                "toolTip": "Specifies the NetApp File subnet IP prefix. This prefix must be within vnet IP prefix address space.",
                "defaultValue": "10.0.0.0/8",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "remoteAccessCIDR",
                "type": "Microsoft.Common.TextBox",
                "label": "Remote Access CIDR",
                "toolTip": "The CIDR IP range that is permitted to access the bastion instances. We recommend that you set this value to a trusted IP range.",
                "defaultValue": "10.0.0.0/8",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "moleculeClusterName",
                "type": "Microsoft.Common.TextBox",
                "label": "Molecule Cluster Name",
                "toolTip": "The name for the Boomi Molecule cluster.",
                "defaultValue": "Boomi_Molecule_VM",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "netAppServiceLevel",
                "type": "Microsoft.Common.DropDown",
                "label": "netAppServiceLevel",
                "toolTip": "Target performance for the capacity pool. Service level: Ultra, Premium, or Standard.",
                "defaultValue": "Standard",
                "constraints": {
                    "allowedValues": [
                        {
                            "label": "Standard",
                           
                            "value": "Standard"
                        },
                        {
                            "label": "Premium",
                           
                            "value": "Premium"
                        },
                        {
                            "label": "Ultra",
                           
                            "value": "Ultra"
                        }
                    ],
                    "required": true
                }
            },
            {
                "name": "BoomiAuthenticationType",
                "type": "Microsoft.Common.DropDown",
                "label": "BoomiAuthenticationType",
                "toolTip": "Boomi Platform Authentication Type",
                "defaultValue": "Password",
                "constraints": {
                    "allowedValues": [
                        {
                            "label": "Password",
                           
                            "value": "Password"
                        },
                        {
                            "label": "Token",
                           
                            "value": "Token"
                        }
                        
                    ],
                    "required": true
                }
            },
            {
                "name": "BoomiAccountID",
                "type": "Microsoft.Common.TextBox",
                "label": "Boomi Account ID",
                "toolTip": "The Boomi account ID that you want to associate with the new Molecule cluster.",
                "defaultValue": "",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "BoomiUsername",
                "type": "Microsoft.Common.TextBox",
                "label": "BoomiUsername",
                "toolTip": "The email account associated with the Boomi account.",
                "defaultValue": "",
                "constraints": {
                    "required": true
                }
            },
            {
                
                "name": "BoomiMFAInstallToken",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "password": "Boomi MFA Install Token"
                
                },
                "toolTip": {
                   
                    "password": "An MFA API token generated by your Dell Boomi Administrator."
                    
                },
                "constraints": {
                    "required": true
                },
                "options": {
                    "hideConfirmation": false
                },
                "osPlatform": "Linux"
            },
            {
                
                "name": "BoomiPassword",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "password": "Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": {
                   
                    "password": "The password associated with the Boomi account."
                    
                },
                "constraints": {
                    "required": true
                },
                "options": {
                    "hideConfirmation": false
                },
                "osPlatform": "Linux"
                
            },
            {
                "name": "virtualMachineAdminUsername",
                "type": "Microsoft.Compute.UserNameTextBox",
                "label": "Username",
                "toolTip": "Specifies the name of the administrator account of the virtual machine.",
                "osPlatform": "Linux",
                "constraints": {
                    "required": true
                }
            },
            {
                "name": "virtualMachineAdminPassword",
                "type": "Microsoft.Compute.CredentialsCombo",
                "label": {
                    "password": "Password",
                    "confirmPassword": "Confirm password"
                },
                "toolTip": {
                   
                    "password": "Specifies the password for the virtual machine."
                    
                },
                "constraints": {
                    "required": true
                },
                "options": {
                    "hideConfirmation": false
                },
                "osPlatform": "Linux"
            }
        ],
        "steps": [
            {
                "name": "VirtualMachineConfig",
                "label": "Virtual Machine Settings",
                "subLabel": {
                    "preValidation": "Configure the virtual machine's resources and settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Infrastructure Settings",
                "elements": [
                    {
                        "name": "virtualMachineSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "Virtual machine size (has to be at least the size of Standard_A3 to support 2 NICs)",
                        "recommendedSizes": [
                            "Standard_D4s_v3"
                        ],
                        "osPlatform": "Linux",
                        "count": "1"
                    }
                ]            
            }
            {
                "name": "MoleculeConfig",
                "label": "Molecule Settings",
                "subLabel": {
                    "preValidation": "Configure the virtual machine's resources and settings",
                    "postValidation": "Done"
                },
                "bladeTitle": "Molecule User Information",
                "elements": [
                    {
                        "name": "virtualMachineSize",
                        "type": "Microsoft.Compute.SizeSelector",
                        "label": "Virtual machine size",
                        "toolTip": "Virtual machine size (has to be at least the size of Standard_A3 to support 2 NICs)",
                        "recommendedSizes": [
                            "Standard_D4s_v3"
                        ],
                        "osPlatform": "Linux",
                        "count": "1"
                    }
                ]            
            }

        ],
        "outputs":
         {
            "location": "[location()]",
            "virtualMachineAdminUsername": "[basics('virtualMachineAdminUsername')]",
            "virtualMachineAdminPassword": "[basics('virtualMachineAdminPassword')]",
            "virtualMachineSize": "[steps('VirtualMachineConfig').virtualMachineSize]",

            "virtualNetworkAddressPrefixes": "[basics('virtualNetworkAddressPrefixes')]",
            "applicationGatewaySubnetAddressPrefix": "[basics('applicationGatewaySubnetAddressPrefix')]",
            "virtualMachineSubnetAddressPrefix": "[basics('virtualMachineSubnetAddressPrefix')]",
            "netAppFileSubnetAddressPrefix": "[basics('netAppFileSubnetAddressPrefix')]",
            "remoteAccessCIDR": "[basics('remoteAccessCIDR')]",
            "moleculeClusterName": "[basics('moleculeClusterName')]",
            "netAppServiceLevel": "[basics('netAppServiceLevel')]",
            "BoomiAuthenticationType": "[basics('BoomiAuthenticationType')]",
            "BoomiAccountID": "[basics('BoomiAccountID')]",
            "BoomiUsername": "[basics('BoomiUsername')]",
            "BoomiPassword": "[basics('BoomiPassword')]",
            "BoomiMFAInstallToken": "[basics('BoomiMFAInstallToken')]"

        }
        
    }
}
